{% extends 'layout.html.twig'%}

{% block content %}
    <div class="show-index-card">
{% for show in shows %}
    <div class="card" style="width: 18rem;">
        <img src="https://via.placeholder.com/150" class="card-img-top" alt="{{ show.name }} picture">
        <div class="card-body">
            <h3>{{ show.name }}</h3>
            <h4>{{ show.type }}</h4>
        </div>
    </div>

    {% endfor %}
    </div>
{% endblock %}