        <div>
            <h1>{{ tour.name }}</h1>
            <p>Lieux : {{ tour.place }}</p>
            <p>Date :   {{ tour.date.date|date("d/ m/ Y") }} </p>
            <p>Début :   {{ tour.date.date|date("H") }} H {{ tour.date.date|date("i") }} </p>
            <img src="{{ tour.picture }}" alt="{{ tour.name }} photo">
        </div>

        <div class="details-text">
