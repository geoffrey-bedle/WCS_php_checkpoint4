        </div>
    </div>

    <div class="show-block">
        <h2>Les numéros</h2>
        <div class="card-show-block">
            {% for show in shows %}

                <div class="card show-card" style="width: 18rem;">
                    <img src="{{ show.picture }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3>{{ show.name }}</h3>
                        <p>{{ show.type }}</p>
                        <p>{{ show.description }}</p>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>


    <div class="artist-block">
        <h2>Les artistes</h2>
        <div class="card-artist-block">
            {% for show in shows %}
                {% for artist in show.artist %}

                    <div class="card artist-card" style="width: 18rem;">
                        <img src="{{ artist.picture }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h3>{{ artist.firstname }} {{ artist.lastname }}</h3>
                            <p>{{ artist.nickname }}</p>
                            <p>{{ artist.speciality }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

{% endblock %}